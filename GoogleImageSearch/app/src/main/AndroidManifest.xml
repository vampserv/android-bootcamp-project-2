<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edward.googleimagesearch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.GoogleImageSearchActivity"
            android:label="@string/title_activity_google_image_search" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ImageDisplayActivity"
            android:label="@string/title_activity_image_display"
            android:parentActivityName=".activities.GoogleImageSearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.googleimagesearch.activities.GoogleImageSearchActivity" />
        </activity>
        <activity
            android:name=".activities.EditSettingsActivity"
            android:label="@string/title_activity_edit_settings"
            android:parentActivityName=".activities.GoogleImageSearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.edward.googleimagesearch.activities.GoogleImageSearchActivity" />
        </activity>
    </application>

</manifest>
